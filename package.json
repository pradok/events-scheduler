{
  "name": "bday",
  "version": "1.0.0",
  "description": "Time-Based Event Scheduling System (Birthday Messaging MVP)",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [],
  "engines": {
    "node": "20.11.0"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --sourcemap",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --sourcemap --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "docker:start": "./scripts/docker-start.sh",
    "docker:stop": "./scripts/docker-stop.sh",
    "docker:reset": "./scripts/docker-reset.sh",
    "docker:logs": "./scripts/docker-logs.sh",
    "docker:teardown": "cd docker && docker-compose down -v",
    "docker:teardown:all": "cd docker && docker-compose down -v --rmi all",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "lambda:build": "./scripts/lambda-build.sh",
    "lambda:deploy:localstack": "node ./scripts/deploy-lambda.js",
    "lambda:deploy": "./scripts/lambda-deploy.sh",
    "lambda:configure": "./scripts/lambda-eventbridge.sh",
    "lambda:all": "npm run lambda:build && npm run lambda:deploy:localstack",
    "webhook:mock": "node ./scripts/mock-webhook-server.js",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "birthday",
    "event-scheduling",
    "timezone",
    "serverless",
    "hexagonal-architecture"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run typecheck'"
    ]
  },
  "devDependencies": {
    "@aws-sdk/client-eventbridge": "^3.916.0",
    "@aws-sdk/client-lambda": "^3.916.0",
    "@testcontainers/postgresql": "^10.5.0",
    "@types/jest": "^29.5.11",
    "@types/luxon": "^3.4.2",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "esbuild": "0.20.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "15.2.0",
    "nock": "^13.5.0",
    "prettier": "3.2.5",
    "prisma": "^6.17.1",
    "prisma-zod-generator": "^1.29.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.916.0",
    "@aws-sdk/client-sqs": "^3.916.0",
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^6.17.1",
    "axios": "^1.6.7",
    "axios-retry": "^3.8.0",
    "fastify": "^4.26.0",
    "luxon": "^3.4.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  }
}
