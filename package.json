{
  "name": "bday",
  "version": "1.0.0",
  "description": "Time-Based Event Scheduling System (Birthday Messaging MVP)",
  "main": "dist/index.js",
  "private": true,
  "workspaces": [],
  "engines": {
    "node": "20.11.0"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --sourcemap",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --sourcemap --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "docker:start": "./scripts/docker-start.sh",
    "docker:stop": "./scripts/docker-stop.sh",
    "docker:reset": "./scripts/docker-reset.sh",
    "docker:logs": "./scripts/docker-logs.sh",
    "prepare": "husky install"
  },
  "keywords": [
    "birthday",
    "event-scheduling",
    "timezone",
    "serverless",
    "hexagonal-architecture"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "esbuild": "0.20.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.2.5",
    "typescript": "5.3.3"
  }
}
